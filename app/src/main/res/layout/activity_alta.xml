<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Alta" >

    <TextView
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="ALTA"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_nombre"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre :" />

        <EditText
            android:id="@+id/et_nombre_alta"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Introduzca el nombre"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_cif"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C I F :" />

        <EditText
            android:id="@+id/et_cif_alta"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Introduzca el CIF"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lbl_importe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Importe : " />

        <EditText
            android:id="@+id/et_importe_alta"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Introduzca el importe"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_resultado_alta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_grabar_alta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Grabar"
        android:text="GRABAR" />

    <Button
        android:id="@+id/btn_salir_alta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cerrarVentana"
        android:text="SALIR" />

</LinearLayout>